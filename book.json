{
  "root": "./doc",

  "title": "Alinex NodeJS Modules",
  "description": "This is a book explaining all the major parts and development background around the Alinex namespaced modules.",
  "author": "Alexander Schilling",
  "language": "en",

  "pdf": {
    "pageNumbers": true,
    "headerTemplate": " ",
    "footerTemplate": " "
  },

  "plugins": [
    "todo", "mermaid-gb3", "uml",
    "-highlight", "code-highlighter",
    "toggle-chapters", "navigator", "downloadpdf"
  ],
  "pluginsConfig": {
    "downloadpdf": {
      "base": "https://www.gitbook.com/download/pdf/book/alinex/nodejs",
      "label": "Download PDF",
      "multilingual": false
    },
    "mermaid-2": {
       "theme": "forest"
    },
    "uml": {
      "format": "png",
      "nailgun": false
    }
  }
}
